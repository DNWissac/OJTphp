<?php
// DB연결
include 'db_conn.php';

// DB조회
$db_data_comeon_qr = "SELECT nListSeq, sTitle, sContent, dtTimesStamp
                      FROM tBoardList;";

// SQL 명령어
$db_data_comeon_rs = mysqli_query($conn, $db_data_comeon_qr);

while($row = mysqli_fetch_array($db_data_comeon_rs)) {
    echo "<tr>";
    echo '<td>'.$row['seq'].'</td>';
    echo '<td>'.iconv("EUC-KR","UTF-8", $row['name']).'</td>';
    echo '<td>'.$row['age'].'</td>';
    echo '<td>'.$row['email'].'</td>';
    echo "</tr>";
}

mysqli_close($conn);