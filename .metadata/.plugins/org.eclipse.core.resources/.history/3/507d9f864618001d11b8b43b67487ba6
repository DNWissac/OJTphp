<?php
// DB연결
include 'pdo.php';

// email 값이 넘어오면 처리
if ($_POST['email'] != null || $_POST['email'] != "") 
{
    try 
    {
        // email 값 받아서 변수에 저장
        $userEmail = $_POST['email'];
        $sql = "SELECT count(*) as count
                          FROM tUserList
                          WHERE sUserEmail = '$userEmail'";
        foreach ($connect->query($sql) as $field){
            echo $field['count'];
        }
        
    } catch (PDOException $ex) 
    {
        echo "레코드 선택 실패!: ".$ex->getMessage()."<br>";
    }
}

