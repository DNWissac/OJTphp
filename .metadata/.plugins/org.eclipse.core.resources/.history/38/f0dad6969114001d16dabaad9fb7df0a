<?php
// DB연결
$conn = include 'dbconn.php';

// DB조회
$db_data_comeon_qr = "SELECT nListSeq, sTitle, sContent, dtTimesStamp
                      FROM tBoardList;";

// SQL 명령어
$db_data_comeon_rs = mysqli_query($conn, $db_data_comeon_qr);

// DB 리스트 꺼내오기
while($row = mysqli_fetch_array($db_data_comeon_rs)) {
    echo '<tr>'.'<td>'.$row['nListSeq'].'</td>';
    echo '<td>'.$row['sTitle'].'</td>';
    echo '<td>'.$row['sContent'].'</td>';
    echo '<td>'.$row['dtTimesStamp'].'</td>'.'</tr>';
}

mysqli_close($conn);

//echo "접속 성공";