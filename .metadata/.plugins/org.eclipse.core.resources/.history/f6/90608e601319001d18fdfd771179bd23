<?php
// PDO를 통해 DB 연결
include 'pdo.php';

$seqNum = $_GET['seqNum'];


try
{
    $sql = "SELECT sMovieTitle, sMovieStory, sMovieImage, dtOpeningDate, dtMovieDate
        FROM tMovieList
        WHERE nMovieSeq = $seqNum";
 
    foreach($connect->query($sql) as $field) {
        echo "영화제목:".$field['sMovieTitle'];
        echo "영화내용:".$field['sMovieStory'];
        echo "영화사진:".$field['sMovieImage'];
        echo "영화개봉일:".$field['dtOpeningDate'];
        echo "영화게시일:".$field['dtMovieDate'];
    }
}
catch(PDOException $ex)
{
    echo "레코드 선택 실패!: ".$ex->getMessage()."<br>";
}


$connect = null;